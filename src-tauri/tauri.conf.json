{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "MindLink",
  "version": "1.0.0",
  "identifier": "com.mindlink.mindlink",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "MindLink - Local LLM Router",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "skipTaskbar": false,
        "visible": true,
        "center": true,
        "maximized": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "DeveloperTool",
    "copyright": "Copyright Â© 2024 MindLink. All rights reserved.",
    "licenseFile": "../LICENSE",
    "shortDescription": "Local LLM API bridge with Cloudflare tunneling",
    "longDescription": "MindLink is a desktop application that creates an OpenAI-compatible API server powered by your ChatGPT Plus/Pro account. It automatically creates secure public tunnels via Cloudflare, allowing third-party applications to access your local LLMs through a standardized API interface. Perfect for developers and AI enthusiasts who want to integrate ChatGPT into their applications without managing API keys or quotas.",
    "icon": [
      "icons/16x16.png",
      "icons/32x32.png",
      "icons/128x128.png"
    ],
    "resources": [],
    "createUpdaterArtifacts": true,
    "publisher": "MindLink",
    "homepage": "https://github.com/mindlink/mindlink",
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0"
        ],
        "files": {
          "/usr/share/applications/mindlink.desktop": "../assets/mindlink.desktop"
        }
      },
      "rpm": {
        "depends": [
          "webkit2gtk4.1",
          "gtk3"
        ]
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "hardenedRuntime": true,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installMode": "perMachine"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDEwQ0RCNTk1MzQ0MTE0OUMKUldTY0ZFRTBsYlhORURuRUNydEJKa2V5NUJaSUFGNm1wdVFCMDJ4aWc2SG0yUGZPZGhPN0IzbkMK",
      "endpoints": [
        "https://api.github.com/repos/mindlink/mindlink/releases/latest"
      ],
      "dialog": true,
      "windows": {
        "installMode": "passive"
      }
    }
  }
}