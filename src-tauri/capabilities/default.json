  "identifier": "default",
  "description": "Default capabilities for MindLink application",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:event:default", 
    "core:window:default",
    "core:app:default",
    "core:tray:default",
    "shell:allow-execute",
    "shell:allow-open",
